                self.SubHeader:SetShadowOffset(1,-1)
            </OnLoad>
            <OnEnter>
                self.hover:Show()
                
                if self.objectiveBlocks==nil then self.objectiveBlocks={} end
                
                for k,v in pairs(self.objectiveBlocks) do
                    v.StatusBar.progress:Show()
                end
                
